<%= render :partial => 'admin/shared/configuration_menu' %>

<div class='toolbar'>
  <ul class='actions'>
    <li>
      <%= button_link_to t("new_gateway"), new_object_url, :icon => 'add'  %>
    </li>
  </ul>
  <br class='clear' />
</div>

<h1><%= t("gateways") %></h1>

<table class="index">
  <thead>
    <th><%= t("name") %></th>
    <th><%= t("provider") %></th>
    <th><%= t("environment") %></th>
    <th><%= t("server") %></th>
    <th><%= t("test_mode") %></th>   
    <th><%= t("active") %></th>     
    <th><%= t("action") %></th>
  </thead>
  <tbody>
    <% @gateways.each do |gateway|%>
      <tr id="<%= dom_id gateway %>">
        <td width="120px"><%= gateway.name %></td>
        <td width="140px"><%= gateway.type %></td>
        <td width="100px"><%= gateway.environment.to_s.titleize %></td>
        <td width="60px"><%= gateway.server.to_s.titleize  %></td>
        <td width="60px"><%= gateway.test_mode.to_s.titleize %></td>
        <td width="60px"><%= gateway.active.to_s.titleize %></td>
        <td width="140px">
        	<%= link_to_edit gateway %> &nbsp;
        	<%= link_to_delete gateway %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>